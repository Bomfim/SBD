<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/simple-sidebar.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="http://localhost:3000/">Menu</a>
                </li>
                <li>
                    <a href="http://localhost:3000/restaurantes">Restaurantes</a>
                </li>
                <li>
                    <a href="http://localhost:3000/pratos">Pratos</a>
                </li>
                <li>
                    <a href="http://localhost:3000/funcionarios">Funcionários</a>
                </li>
                <li>
                    <a href="http://localhost:3000/consultas">Consultas</a>
                </li>
                <li>
                    <a href="http://localhost:3000/sobre">Sobre</a>
                </li>
                <li>
                    <a href="http://localhost:3000/contato">Contato</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <h2>Funcionários</h2>
                        <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <!-- Table -->
                        <table class="table">
                          <thead>
                            <tr>
                              <th>Nome</th>
                              <th>Salário</th>
                              <th>Endereço</th>
                              <th>Tipo</th>
                              <th>Formação do gerente</th>
                              <th>Adicional do garçom</th>
                              <th>Especialização do cozinheiro</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @funcionarios.each do |funcionario| %>
                              <tr>
                                <td><%= funcionario.nome %></td>
                                <td><%= funcionario.salario %></td>
                                <td><%= funcionario.endereco %></td>
                                <td><%= funcionario.tipo_funcionario %></td>
                                <td><%= funcionario.formacao_gerente %></td>
                                <td><%= funcionario.adicional_garcom %></td>
                                <td><%= funcionario.especializacao_cozinheiro %></td>
                                <td><%= link_to 'Detalhes', funcionario %></td>
                                <td><%= link_to 'Editar', edit_funcionario_path(funcionario) %></td>
                                <td><%= link_to 'Excluir', funcionario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                </div>
                    <%= link_to new_funcionario_path, class: 'btn btn-success' do %>
                        <i class="glyphicon glyphicon-plus"></i> Novo Funcionario
                    <% end %>
                <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Esconder Menu</a>
            </div>   
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>